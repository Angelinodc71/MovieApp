@model MovieViewModel
@{
  ViewBag.Title = "Editar Película";
}
<div>
  <h4>Editar Película</h4>
  <div>
    <form method="POST">
      <div class="form-group">
        <label asp-for="name">Nombre</label>
        <input type="text" asp-for="name" class="form-control">
        <span asp-validation-for="name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="genre">Género</label>
        <input type="text" asp-for="genre" class="form-control">
        <span asp-validation-for="genre" class="text-danger"></span>
      </div>      
      <input type="submit" class="btn btn-primary">
      <a asp-controller="App" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</div>